name: Package

on: [push]

jobs:
  pyinstaller-build:
    runs-on: windows-latest
    steps:
      - name: Create Windows Executable
        uses: sayyid5416/pyinstaller@v1
        with:
          python_ver: '3.12'
          spec: 'build.spec'
          requirements: 'requirements.txt'
          upload_exe_with_name: 'GUI_Philippe.exe'
          options: --onefile, --name "GUI de Philippe", --windowed, 